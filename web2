<script>
  function topla(){
  s1=document.getElementById("s1").value;
  s2=document.getElementById("s2").value;
  t=parseInt(s1)+parseInt(s2)
  document.getElementById("sonuc").value=t;
  return false;
  }
  

  function cikar(){
	  s1=document.getElementById("s1").value;
	  s2=document.getElementById("s2").value;
	 sonuc=s1-s2;
	  document.getElementById("sonuc").value=sonuc;
	  return false;
  }

  function carp(){
	  s1=document.getElementById("s1").value;
	  s2=document.getElementById("s2").value;
	  sonuc=s1*s2;
	  document.getElementById("sonuc").value=sonuc;
	  return false;
  }
  function bol(){
	  s1=document.getElementById("s1").value;
	  s2=document.getElementById("s2").value;
	  sonuc=s1/s2;
	  document.getElementById("sonuc").value=sonuc;
	  return false;
  }

</script>
